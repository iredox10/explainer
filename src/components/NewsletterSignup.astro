<section class="bg-yellow-400 py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col items-center text-center">
            <h2 class="text-3xl font-black text-gray-900 sm:text-4xl">
                Get Smarter Every Week
            </h2>
            <p class="mt-4 max-w-xl text-lg text-gray-800">
                Join thousands of curious readers. We'll send you one visual
                explainer every week that makes complex topics simple.
            </p>
            <form class="mt-8 flex w-full max-w-md flex-col gap-3 sm:flex-row">
                <input
                    type="email"
                    placeholder="Enter your email"
                    class="flex-1 rounded-lg border-2 border-gray-900 bg-white px-4 py-3 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2 focus:ring-offset-yellow-400"
                    required
                />
                <button
                    type="submit"
                    class="rounded-lg bg-gray-900 px-6 py-3 font-semibold text-white transition-colors hover:bg-gray-800"
                >
                    Subscribe
                </button>
            </form>
            <p class="mt-4 text-sm text-gray-700">
                No spam. Unsubscribe anytime.
            </p>
        </div>
    </div>
</section>
