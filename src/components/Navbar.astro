---
interface Props {
    transparent?: boolean;
}

const { transparent = false } = Astro.props;
---

<nav
    class:list={[
        "fixed top-0 left-0 right-0 z-50 transition-all duration-300",
        transparent ? "bg-transparent" : "bg-white shadow-sm",
    ]}
    id="navbar"
>
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-2">
                <div
                    class:list={[
                        "text-2xl font-black tracking-tighter",
                        transparent ? "text-white" : "text-gray-900",
                    ]}
                >
                    <span class="text-yellow-400">EX</span>PLAINER
                </div>
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden items-center gap-8 md:flex">
                <a
                    href="#featured"
                    class:list={[
                        "text-sm font-semibold uppercase tracking-wide transition-colors hover:text-yellow-500",
                        transparent ? "text-white/90" : "text-gray-700",
                    ]}
                >
                    Featured
                </a>
                <a
                    href="#latest"
                    class:list={[
                        "text-sm font-semibold uppercase tracking-wide transition-colors hover:text-yellow-500",
                        transparent ? "text-white/90" : "text-gray-700",
                    ]}
                >
                    Latest
                </a>
                <a
                    href="#topics"
                    class:list={[
                        "text-sm font-semibold uppercase tracking-wide transition-colors hover:text-yellow-500",
                        transparent ? "text-white/90" : "text-gray-700",
                    ]}
                >
                    Topics
                </a>
                <a
                    href="#about"
                    class:list={[
                        "text-sm font-semibold uppercase tracking-wide transition-colors hover:text-yellow-500",
                        transparent ? "text-white/90" : "text-gray-700",
                    ]}
                >
                    About
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button
                class="md:hidden"
                id="mobile-menu-btn"
                aria-label="Toggle menu"
            >
                <svg
                    class:list={[
                        "h-6 w-6",
                        transparent ? "text-white" : "text-gray-900",
                    ]}
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div
        class="hidden bg-white shadow-lg md:hidden"
        id="mobile-menu"
    >
        <div class="space-y-1 px-4 py-4">
            <a
                href="#featured"
                class="block py-2 text-sm font-semibold uppercase tracking-wide text-gray-700 hover:text-yellow-500"
            >
                Featured
            </a>
            <a
                href="#latest"
                class="block py-2 text-sm font-semibold uppercase tracking-wide text-gray-700 hover:text-yellow-500"
            >
                Latest
            </a>
            <a
                href="#topics"
                class="block py-2 text-sm font-semibold uppercase tracking-wide text-gray-700 hover:text-yellow-500"
            >
                Topics
            </a>
            <a
                href="#about"
                class="block py-2 text-sm font-semibold uppercase tracking-wide text-gray-700 hover:text-yellow-500"
            >
                About
            </a>
        </div>
    </div>
</nav>

<script>
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuBtn?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
    });

    // Navbar scroll effect
    const navbar = document.getElementById("navbar");
    window.addEventListener("scroll", () => {
        if (window.scrollY > 100) {
            navbar?.classList.remove("bg-transparent");
            navbar?.classList.add("bg-white", "shadow-sm");
            navbar?.querySelectorAll("a, button").forEach((el) => {
                el.classList.remove("text-white", "text-white/90");
                el.classList.add("text-gray-700", "text-gray-900");
            });
        } else {
            if (navbar?.dataset.transparent === "true") {
                navbar?.classList.add("bg-transparent");
                navbar?.classList.remove("bg-white", "shadow-sm");
            }
        }
    });
</script>
