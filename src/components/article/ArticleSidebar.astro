---
const { relatedArticles } = Astro.props;
---
<aside class="hidden lg:block">
  <div class="sticky top-24">
    <h3 class="text-sm font-bold uppercase tracking-widest text-gray-400 mb-6 border-t border-black pt-2">
      Read Next
    </h3>
    <ul class="space-y-6">
      {relatedArticles.map((article) => (
        <li>
          <a href="#" class="group block">
            <div class="aspect-video w-full bg-gray-200 mb-2 overflow-hidden rounded-sm">
               <img src={article.image} alt="" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
            </div>
            <h4 class="font-bold leading-tight text-sm group-hover:text-gray-600 group-hover:underline decoration-yellow-400 decoration-2 underline-offset-2">
              {article.title}
            </h4>
          </a>
        </li>
      ))}
    </ul>
  </div>
</aside>
