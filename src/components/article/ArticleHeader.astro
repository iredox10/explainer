---
const { category, headline, subhead, imageUrl, author, date } = Astro.props;
---
<header class="flex flex-col items-center text-center mb-12 pt-10">
  <div class="mb-6">
    <span class="bg-yellow-400 text-black text-xs font-bold uppercase tracking-widest px-3 py-1 rounded-full">
      {category}
    </span>
  </div>
  <h1 class="text-5xl md:text-6xl font-black tracking-tight text-black mb-6 max-w-4xl leading-tight">
    {headline}
  </h1>
  <p class="text-xl text-gray-500 font-serif max-w-2xl mb-8 leading-relaxed">
    {subhead}
  </p>
  <div class="flex items-center gap-2 text-sm font-bold text-gray-900 mb-10">
    <span>By {author}</span>
    <span class="text-gray-400">â€¢</span>
    <time>{date}</time>
  </div>
  <div class="w-full h-[60vh] overflow-hidden">
    <img src={imageUrl} alt={headline} class="w-full h-full object-cover" />
  </div>
</header>
