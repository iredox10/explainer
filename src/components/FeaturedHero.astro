---
interface Props {
    story: {
        headline: string;
        subhead: string;
        category: string;
        slug: string;
        imageUrl?: string;
        videoUrl?: string;
        readTime?: string;
    };
}

const { story } = Astro.props;
---

<section class="relative h-screen w-full overflow-hidden bg-gray-900">
    <!-- Background Media -->
    {
        story.videoUrl ? (
            <video
                class="absolute inset-0 h-full w-full object-cover opacity-50"
                autoplay
                muted
                loop
                playsinline
            >
                <source src={story.videoUrl} type="video/mp4" />
            </video>
        ) : story.imageUrl ? (
            <img
                src={story.imageUrl}
                alt=""
                class="absolute inset-0 h-full w-full object-cover opacity-50"
            />
        ) : (
            <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-yellow-900" />
        )
    }

    <!-- Gradient Overlay -->
    <div
        class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"
    >
    </div>

    <!-- Content -->
    <div
        class="relative z-10 flex h-full flex-col justify-end px-6 pb-24 sm:px-12 lg:px-24"
    >
        <div class="mx-auto w-full max-w-7xl">
            <!-- Category Badge -->
            <div class="mb-4">
                <span
                    class="inline-block bg-yellow-400 px-3 py-1 text-xs font-bold uppercase tracking-wider text-gray-900"
                >
                    {story.category}
                </span>
            </div>

            <!-- Headline -->
            <h1
                class="max-w-4xl text-4xl font-black leading-tight tracking-tight text-white sm:text-6xl lg:text-7xl"
            >
                {story.headline}
            </h1>

            <!-- Subhead -->
            <p
                class="mt-6 max-w-2xl text-lg font-light leading-relaxed text-gray-300 sm:text-xl"
            >
                {story.subhead}
            </p>

            <!-- CTA -->
            <div class="mt-8 flex items-center gap-6">
                <a
                    href={`/story/${story.slug}`}
                    class="group inline-flex items-center gap-2 bg-white px-6 py-3 font-semibold text-gray-900 transition-all hover:bg-yellow-400"
                >
                    Read the Story
                    <svg
                        class="h-5 w-5 transition-transform group-hover:translate-x-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
                {
                    story.readTime && (
                        <span class="text-sm text-gray-400">
                            {story.readTime} read
                        </span>
                    )
                }
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div
        class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce text-white/60"
    >
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>
