---
import MainLayout from "../../layouts/MainLayout.astro";
import VoxNav from "../../components/ui/VoxNav.astro";
import ProgressBar from "../../components/ui/ProgressBar.jsx";
import { Share2, Bookmark, MessageCircle, Facebook, Twitter, Linkedin, Mail } from 'lucide-react';

const { story } = Astro.props;
const ARTICLE_DATA = story;
---

<MainLayout title={ARTICLE_DATA.headline} showNav={false}>
  <div class="bg-[#fdfdfd] text-[#121212] font-sans antialiased min-h-screen selection:bg-yellow-200 selection:text-black">
    <ProgressBar client:load />
    <VoxNav />

    <main>
      {/* ARTICLE HEADER AREA */}
      <header class="max-w-[1400px] mx-auto px-6 pt-12 pb-8 lg:pb-12 lg:pt-20 grid grid-cols-1 lg:grid-cols-12 gap-12">
        
        {/* Header Content (Left) */}
        <div class="lg:col-span-8 flex flex-col justify-center">
          <div class="flex items-center gap-3 mb-6">
             <span class="bg-yellow-300 h-px w-8"></span>
             <span class="text-yellow-600 font-bold uppercase text-xs tracking-[0.2em]">
                {ARTICLE_DATA.category}
             </span>
          </div>

          <h1 class="font-serif-display text-5xl md:text-6xl lg:text-7xl font-black tracking-tighter leading-[0.9] mb-8 text-black text-balance">
            {ARTICLE_DATA.headline}
          </h1>
          
          <p class="text-xl md:text-2xl text-gray-600 font-sans font-light leading-relaxed max-w-3xl text-balance border-l-4 border-gray-200 pl-6 mb-8">
            {ARTICLE_DATA.subhead}
          </p>

          {/* Author & Meta - Compact */}
          <div class="flex items-center gap-4 text-sm font-bold tracking-wide">
             <div class="flex items-center gap-2">
               <span class="uppercase text-black border-b-2 border-yellow-300">{ARTICLE_DATA.author}</span>
             </div>
             <span class="text-gray-300">/</span>
             <span class="text-gray-500">{ARTICLE_DATA.date}</span>
             <span class="text-gray-300">/</span>
             <span class="text-gray-500">{ARTICLE_DATA.readTime}</span>
          </div>
        </div>
      </header>

      {/* HERO IMAGE - Wide but not full bleed */}
      <div class="w-full max-w-[1400px] mx-auto mb-16 md:mb-24 px-0 md:px-6">
        <div class="aspect-[3/2] md:aspect-[21/9] overflow-hidden relative group">
           <img src={ARTICLE_DATA.heroImage} class="w-full h-full object-cover transition-transform duration-1000 ease-out group-hover:scale-105" alt="Hero" />
           <div class="absolute bottom-0 right-0 bg-white/90 backdrop-blur px-4 py-2 text-[10px] font-mono uppercase tracking-widest text-gray-500">
              Image: Getty / Vox Media
           </div>
        </div>
      </div>

      {/* CONTENT GRID */}
      <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-12 gap-12 pb-32 relative">
        
        {/* Sidebar (Left - Sticky Share) */}
        <aside class="hidden lg:block lg:col-span-1 h-full">
           <div class="sticky top-32 flex flex-col gap-4 items-center">
             <button class="w-10 h-10 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:text-black hover:border-black hover:bg-yellow-300 transition-all duration-200 group">
               <Share2 className="w-4 h-4 group-hover:scale-110 transition-transform" />
             </button>
             <button class="w-10 h-10 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:text-blue-600 hover:border-blue-600 transition-all duration-200 group">
               <Twitter className="w-4 h-4 group-hover:scale-110 transition-transform" />
             </button>
             <button class="w-10 h-10 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:text-blue-800 hover:border-blue-800 transition-all duration-200 group">
               <Facebook className="w-4 h-4 group-hover:scale-110 transition-transform" />
             </button>
             <div class="w-px h-12 bg-gray-200 my-2"></div>
             <button class="w-10 h-10 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:text-black hover:border-black transition-all duration-200 group">
               <Bookmark className="w-4 h-4 group-hover:scale-110 transition-transform" />
             </button>
           </div>
        </aside>

        {/* Main Content Column */}
        <article class="lg:col-span-7 lg:col-start-3">
          
          {/* Article Body */}
          <div class="space-y-8 font-serif text-[1.125rem] md:text-[1.25rem] leading-[1.85] text-gray-900 drop-cap-container">
            {ARTICLE_DATA.content.map((block, index) => {
              if (block.type === 'p') {
                 // Add a special class to the first paragraph for Drop Cap styling
                const isFirst = index === 0;
                return (
                  <p class={isFirst ? "first-letter:float-left first-letter:text-[5.5rem] first-letter:font-black first-letter:font-serif-display first-letter:text-black first-letter:leading-[0.85] first-letter:mr-3 first-letter:mt-[-6px]" : ""}>
                    {block.text}
                  </p>
                );
              }
              if (block.type === 'quote') {
                return (
                  <figure class="my-14 relative group">
                    <div class="absolute left-0 top-0 w-1 h-full bg-yellow-300 transform origin-top scale-y-0 group-hover:scale-y-100 transition-transform duration-500"></div>
                    <blockquote class="pl-6 md:pl-8 text-2xl md:text-3xl font-serif-display font-black italic text-black leading-tight">
                      "{block.text}"
                    </blockquote>
                    {block.author && (
                      <figcaption class="pl-6 md:pl-8 mt-4 text-xs font-sans font-bold uppercase tracking-[0.2em] text-gray-400 flex items-center gap-2">
                        <span class="w-4 h-px bg-gray-300"></span>
                        {block.author}
                      </figcaption>
                    )}
                  </figure>
                );
              }
              if (block.type === 'callout') {
                return (
                  <div class="bg-gray-50 p-8 my-12 border-t-4 border-black relative overflow-hidden">
                    <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-yellow-300 rounded-full opacity-20 blur-2xl"></div>
                    <h4 class="font-sans font-black uppercase tracking-widest text-xs text-gray-400 mb-3 relative z-10">
                       Key Insight
                    </h4>
                    <p class="font-sans font-bold text-xl leading-tight text-black relative z-10">{block.text}</p>
                  </div>
                );
              }
              if (block.type === 'image') {
                return (
                  <figure class="my-14 -mx-6 md:-mx-12 lg:-mx-24 relative">
                    <img 
                      src={block.url} 
                      alt={block.caption || "Article image"} 
                      class="w-full h-auto shadow-sm"
                    />
                    {block.caption && (
                      <figcaption class="mt-3 text-xs text-gray-500 font-sans font-medium text-center uppercase tracking-wider">
                        {block.caption}
                      </figcaption>
                    )}
                  </figure>
                );
              }
            })}
            
            {/* Newsletter Inline - Minimalist */}
            <div class="my-16 pt-8 border-t-2 border-black">
              <h3 class="font-serif-display font-black text-3xl mb-4">Get the full picture.</h3>
              <p class="text-gray-600 mb-6 text-lg">Join 25,000+ subscribers who get our weekly deep dives.</p>
              <div class="flex flex-col sm:flex-row gap-3">
                <input type="email" placeholder="Enter your email" class="bg-gray-100 px-4 py-3 font-bold text-black focus:outline-none focus:ring-2 focus:ring-yellow-400 flex-1" />
                <button class="bg-black text-white px-8 py-3 font-black text-xs uppercase tracking-widest hover:bg-yellow-400 hover:text-black transition-colors">
                  Subscribe
                </button>
              </div>
            </div>
          </div>
        </article>

        {/* Right Sidebar (Desktop Only - Most Read / Related) */}
        <aside class="hidden lg:block lg:col-span-3 lg:pl-8">
           <div class="sticky top-32">
             <div class="mb-12">
                <h4 class="font-sans font-black uppercase text-[10px] tracking-[0.2em] text-gray-400 mb-6 border-b border-gray-200 pb-2">Most Read</h4>
                <ol class="space-y-6 list-decimal list-inside text-gray-300 font-serif-display font-bold text-xl">
                  <li class="group cursor-pointer">
                     <span class="text-black text-base font-sans font-bold group-hover:text-gray-600 leading-tight transition-colors inline-block pl-2">Why electric planes are inevitable</span>
                  </li>
                  <li class="group cursor-pointer">
                     <span class="text-black text-base font-sans font-bold group-hover:text-gray-600 leading-tight transition-colors inline-block pl-2">The end of the open office</span>
                  </li>
                  <li class="group cursor-pointer">
                     <span class="text-black text-base font-sans font-bold group-hover:text-gray-600 leading-tight transition-colors inline-block pl-2">How TikTok changed pop music</span>
                  </li>
                </ol>
             </div>

             {ARTICLE_DATA.related && (
              <div>
                <h4 class="font-sans font-black uppercase text-[10px] tracking-[0.2em] text-gray-400 mb-6 border-b border-gray-200 pb-2">Related Stories</h4>
                <div class="space-y-8">
                  {ARTICLE_DATA.related.map((article) => (
                    <div class="group cursor-pointer flex flex-col gap-3">
                      <div class="w-full aspect-[3/2] bg-gray-100 overflow-hidden relative">
                        <img src={article.image} class="w-full h-full object-cover transition-all duration-500 group-hover:scale-105" />
                      </div>
                      <h5 class="font-serif-display font-bold text-lg leading-tight group-hover:underline decoration-yellow-400 decoration-2 underline-offset-2 transition-all">
                        {article.title}
                      </h5>
                    </div>
                  ))}
                </div>
              </div>
            )}
           </div>
        </aside>

      </div>
    </main>
  </div>
</MainLayout>