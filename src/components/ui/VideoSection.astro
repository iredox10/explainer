---
interface Props {
  videos: {
    title: string;
    seriesName: string;
    duration: string;
    thumbUrl: string;
  }[];
}

const { videos } = Astro.props;
---

<section class="bg-[#121212] text-white py-16 border-t border-gray-800">
  <div class="max-w-6xl mx-auto px-6">
    <div class="mb-10 border-b border-gray-800 pb-4 flex items-end justify-between">
      <div>
         <h2 class="text-3xl font-black text-white mb-1">Latest Video</h2>
         <div class="h-1 w-24 bg-[#FAFF00]"></div>
      </div>
      <a href="#" class="text-gray-400 text-sm uppercase font-bold tracking-wider hover:text-white transition-colors">View All Videos</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {videos.map((video) => (
        <article class="group cursor-pointer">
          <!-- Thumbnail Container -->
          <div class="relative aspect-video bg-gray-800 mb-4 overflow-hidden">
            <img 
              src={video.thumbUrl} 
              alt={video.title}
              class="w-full h-full object-cover opacity-90 group-hover:opacity-100 transition-opacity duration-300"
            />
            
            <!-- Play Button Overlay -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-12 h-12 rounded-full bg-white/90 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                <svg class="w-5 h-5 text-black ml-1" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M8 5v14l11-7z" />
                </svg>
              </div>
            </div>

            <!-- Timestamp -->
            <div class="absolute bottom-2 right-2 bg-black px-1.5 py-0.5 text-xs font-bold font-mono tracking-wide text-white">
              {video.duration}
            </div>
          </div>

          <!-- Content -->
          <div class="pr-4">
            <span class="text-gray-400 text-xs uppercase tracking-widest font-bold block mb-1">
              {video.seriesName}
            </span>
            <h3 class="text-lg font-bold leading-tight group-hover:text-[#FAFF00] transition-colors duration-200">
              {video.title}
            </h3>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
