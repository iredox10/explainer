---
interface Props {
    story: {
        headline: string;
        subhead?: string;
        category: string;
        slug: string;
        imageUrl?: string;
        readTime?: string;
        date?: string;
    };
    variant?: "large" | "medium" | "small" | "horizontal";
}

const { story, variant = "medium" } = Astro.props;
---

{
    variant === "large" && (
        <article class="group relative overflow-hidden rounded-lg bg-gray-900">
            <div class="aspect-[16/10] overflow-hidden">
                {story.imageUrl ? (
                    <img
                        src={story.imageUrl}
                        alt=""
                        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                ) : (
                    <div class="h-full w-full bg-gradient-to-br from-gray-800 to-gray-700" />
                )}
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent" />
            <div class="absolute bottom-0 left-0 right-0 p-6 sm:p-8">
                <span class="mb-3 inline-block bg-yellow-400 px-2 py-1 text-xs font-bold uppercase tracking-wider text-gray-900">
                    {story.category}
                </span>
                <h3 class="text-2xl font-bold leading-tight text-white sm:text-3xl">
                    <a
                        href={`/story/${story.slug}`}
                        class="hover:underline decoration-yellow-400 underline-offset-4"
                    >
                        {story.headline}
                    </a>
                </h3>
                {story.subhead && (
                    <p class="mt-3 line-clamp-2 text-gray-300">
                        {story.subhead}
                    </p>
                )}
                <div class="mt-4 flex items-center gap-3 text-sm text-gray-400">
                    {story.date && <span>{story.date}</span>}
                    {story.readTime && (
                        <>
                            <span>·</span>
                            <span>{story.readTime}</span>
                        </>
                    )}
                </div>
            </div>
        </article>
    )
}

{
    variant === "medium" && (
        <article class="group">
            <div class="aspect-[16/10] overflow-hidden rounded-lg bg-gray-200">
                {story.imageUrl ? (
                    <img
                        src={story.imageUrl}
                        alt=""
                        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                ) : (
                    <div class="h-full w-full bg-gradient-to-br from-gray-300 to-gray-200" />
                )}
            </div>
            <div class="mt-4">
                <span class="text-xs font-bold uppercase tracking-wider text-yellow-600">
                    {story.category}
                </span>
                <h3 class="mt-2 text-xl font-bold leading-tight text-gray-900">
                    <a
                        href={`/story/${story.slug}`}
                        class="hover:underline decoration-yellow-400 underline-offset-4"
                    >
                        {story.headline}
                    </a>
                </h3>
                {story.subhead && (
                    <p class="mt-2 line-clamp-2 text-gray-600">
                        {story.subhead}
                    </p>
                )}
                <div class="mt-3 flex items-center gap-3 text-sm text-gray-500">
                    {story.date && <span>{story.date}</span>}
                    {story.readTime && (
                        <>
                            <span>·</span>
                            <span>{story.readTime}</span>
                        </>
                    )}
                </div>
            </div>
        </article>
    )
}

{
    variant === "small" && (
        <article class="group">
            <div class="aspect-[16/10] overflow-hidden rounded-lg bg-gray-200">
                {story.imageUrl ? (
                    <img
                        src={story.imageUrl}
                        alt=""
                        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                ) : (
                    <div class="h-full w-full bg-gradient-to-br from-gray-300 to-gray-200" />
                )}
            </div>
            <div class="mt-3">
                <span class="text-xs font-bold uppercase tracking-wider text-yellow-600">
                    {story.category}
                </span>
                <h3 class="mt-1 text-base font-bold leading-tight text-gray-900">
                    <a
                        href={`/story/${story.slug}`}
                        class="hover:underline decoration-yellow-400 underline-offset-2"
                    >
                        {story.headline}
                    </a>
                </h3>
            </div>
        </article>
    )
}

{
    variant === "horizontal" && (
        <article class="group flex gap-4">
            <div class="h-24 w-24 flex-shrink-0 overflow-hidden rounded-lg bg-gray-200">
                {story.imageUrl ? (
                    <img
                        src={story.imageUrl}
                        alt=""
                        class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                ) : (
                    <div class="h-full w-full bg-gradient-to-br from-gray-300 to-gray-200" />
                )}
            </div>
            <div class="flex flex-col justify-center">
                <span class="text-xs font-bold uppercase tracking-wider text-yellow-600">
                    {story.category}
                </span>
                <h3 class="mt-1 text-base font-bold leading-tight text-gray-900">
                    <a
                        href={`/story/${story.slug}`}
                        class="hover:underline decoration-yellow-400 underline-offset-2"
                    >
                        {story.headline}
                    </a>
                </h3>
                {story.readTime && (
                    <span class="mt-1 text-sm text-gray-500">
                        {story.readTime}
                    </span>
                )}
            </div>
        </article>
    )
}
