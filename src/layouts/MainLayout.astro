---
import "../styles/global.css";
import VoxNav from "../components/ui/VoxNav.astro";
import PersistentAudioPlayer from "../components/ui/PersistentAudioPlayer.jsx";
import CommandMenu from "../components/ui/CommandMenu.jsx";

interface Props {
    title: string;
    showNav?: boolean;
    accentColor?: string;
}

const { title, showNav = true, accentColor = "#FAFF00" } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="A Vox-style visual journalism platform"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-white text-gray-900 font-sans antialiased transition-colors duration-300 dark:bg-gray-900 dark:text-gray-100">
        <script is:inline>
            const theme = (() => {
                if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
                    return localStorage.getItem('theme');
                }
                if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    return 'dark';
                }
                return 'light';
            })();
          
            if (theme === 'dark') {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
            window.localStorage.setItem('theme', theme);
        </script>
        <CommandMenu client:load />
        {showNav && <VoxNav accentColor={accentColor} />}
        <slot />
        {/* @ts-ignore */}
        <PersistentAudioPlayer client:load text="" title="" />
    </body>
</html>
