---
import "../styles/global.css";
import VoxNav from "../components/ui/VoxNav.astro";
import PersistentAudioPlayer from "../components/ui/PersistentAudioPlayer.jsx";
import CommandMenu from "../components/ui/CommandMenu.jsx";

interface Props {
    title: string;
    showNav?: boolean;
}

const { title, showNav = true } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="A Vox-style visual journalism platform"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-white text-gray-900 font-sans antialiased">
        <CommandMenu client:load />
        {showNav && <VoxNav />}
        <slot />
        {/* @ts-ignore */}
        <PersistentAudioPlayer client:load text="" title="" />
    </body>
</html>
