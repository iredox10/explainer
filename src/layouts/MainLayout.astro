---
import "../styles/base.css";
import VoxNav from "../components/ui/VoxNav.astro";
import PersistentAudioPlayer from "../components/ui/PersistentAudioPlayer.jsx";
import CommandMenu from "../components/ui/CommandMenu.jsx";

interface Props {
    title: string;
    showNav?: boolean;
    description?: string;
    image?: string;
    canonical?: string;
    keywords?: string[];
    article?: any;
}

const { 
    title, 
    showNav = true,
    description = "A Vox-style visual journalism platform",
    image = "/social-preview.jpg",
    canonical,
    keywords = [],
    article
} = Astro.props;

const canonicalURL = canonical || Astro.url.href;
const keywordsContent = Array.isArray(keywords) ? keywords.join(', ') : '';
const articleData = article || null;
const isArticle = !!articleData?.headline;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content={description}
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        {keywordsContent && <meta name="keywords" content={keywordsContent} />}

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={image} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalURL} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={image} />

        {import.meta.env.PUBLIC_ANALYTICS_KEY && (
            <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_ANALYTICS_KEY}`}></script>
        )}
        {import.meta.env.PUBLIC_ANALYTICS_KEY && (
            <script>
                {`window.dataLayer = window.dataLayer || [];
function gtag(){dataLayer.push(arguments);} 
gtag('js', new Date());
gtag('config', '${import.meta.env.PUBLIC_ANALYTICS_KEY}');`}
            </script>
        )}

        {isArticle && (
            <script type="application/ld+json">
                {JSON.stringify({
                    "@context": "https://schema.org",
                    "@type": "NewsArticle",
                    headline: articleData.headline,
                    description: description,
                    datePublished: articleData.publishedAt || articleData.date,
                    dateModified: articleData.$updatedAt || articleData.publishedAt || articleData.date,
                    author: {
                        "@type": "Person",
                        name: articleData.author
                    },
                    image: image ? [image] : undefined,
                    mainEntityOfPage: canonicalURL,
                    publisher: {
                        "@type": "Organization",
                        name: "Explainer",
                        logo: {
                            "@type": "ImageObject",
                            url: "/favicon.svg"
                        }
                    }
                })}
            </script>
        )}

        <title>{title}</title>
    </head>
    <body class="bg-white text-gray-900 font-sans antialiased">
        <CommandMenu client:load />
        {showNav && <VoxNav />}
        <slot />
        {/* @ts-ignore */}
        <PersistentAudioPlayer client:load text="" title="" />
    </body>
</html>
