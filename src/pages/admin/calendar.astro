---
import EditorialCalendar from '../../components/admin/EditorialCalendar';
import AdminSidebar from '../../components/admin/AdminSidebar';

const title = 'Editorial Calendar';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Explainer Admin</title>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="min-h-screen bg-transparent flex font-sans text-gray-900" id="admin-calendar-root">
        <AdminSidebar activePage="calendar" client:only="react" />
        
        <main class="lg:ml-64 flex-1 p-4 md:p-8 pt-24 lg:pt-8 bg-gray-50/50">
            <header class="flex flex-col md:flex-row justify-between items-start md:items-end gap-6 mb-12">
                <div>
                    <div class="flex items-center gap-3 mb-2">
                        <div class="bg-black p-2 rounded-lg">
                            <svg class="w-5 h-5 text-[#FAFF00]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect width="18" height="18" x="3" y="4" rx="2" ry="2"/>
                                <line x1="16" x2="16" y1="2" y2="6"/>
                                <line x1="8" x2="8" y1="2" y2="6"/>
                                <line x1="3" x2="21" y1="10" y2="10"/>
                            </svg>
                        </div>
                        <h1 class="text-3xl font-black text-gray-900 uppercase tracking-tighter">{title}</h1>
                    </div>
                    <p class="text-gray-500 text-sm font-medium">Visual newsroom scheduling and assignment tracking.</p>
                </div>
                
                <a
                    href="/admin/edit/new-story"
                    class="w-full md:w-auto bg-black text-white px-8 py-4 rounded-2xl text-xs font-black uppercase tracking-widest flex items-center justify-center gap-3 hover:bg-[#008751] transition-all shadow-xl"
                >
                    <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M5 12h14"/>
                        <path d="M12 5v14"/>
                    </svg>
                    Schedule Story
                </a>
            </header>

            <EditorialCalendar client:only="react" />
        </main>
    </div>
</body>
</html>