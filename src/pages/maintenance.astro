---
import "../styles/base.css";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Under Maintenance | VOX.AFRICA</title>
    </head>
    <body class="bg-black text-white font-sans overflow-hidden">
        <div
            class="min-h-screen flex flex-col items-center justify-center p-8 relative"
        >
            <!-- Abstract background elements -->
            <div
                class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none opacity-20"
            >
                <div
                    class="absolute top-[-20%] left-[-10%] w-[60%] h-[60%] bg-[#FAFF00] rounded-full blur-[150px] animate-pulse"
                >
                </div>
                <div
                    class="absolute bottom-[-20%] right-[-10%] w-[60%] h-[60%] bg-white rounded-full blur-[150px] animate-pulse"
                    style="animation-delay: 2s"
                >
                </div>
            </div>

            <div class="max-w-2xl w-full text-center space-y-12 relative z-10">
                <div class="space-y-4">
                    <div
                        class="inline-block bg-[#FAFF00] text-black px-4 py-1.5 rounded-full text-[10px] font-black uppercase tracking-[0.3em] mb-4"
                    >
                        Infrastructure Update in Progress
                    </div>
                    <h1
                        class="text-7xl md:text-9xl font-black uppercase tracking-tighter leading-[0.8] mb-8"
                    >
                        Back <br />
                        <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-[#FAFF00] to-white"
                            >Shortley.</span
                        >
                    </h1>
                    <p
                        class="text-xl md:text-2xl font-medium text-gray-400 leading-relaxed max-w-xl mx-auto"
                    >
                        We're currently fine-tuning our investigative systems to
                        provide you with a sharper perspective on the world.
                    </p>
                </div>

                <div
                    class="flex flex-col md:flex-row items-center justify-center gap-8 pt-12 border-t border-white/10"
                >
                    <div class="text-left">
                        <p
                            class="text-[10px] font-black uppercase tracking-widest text-gray-500 mb-2"
                        >
                            Systems Status
                        </p>
                        <div class="flex items-center gap-2">
                            <div
                                class="w-2 h-2 rounded-full bg-[#FAFF00] animate-ping"
                            >
                            </div>
                            <span
                                class="text-sm font-bold uppercase tracking-widest text-[#FAFF00]"
                                >Database Migration Active</span
                            >
                        </div>
                    </div>
                    <div class="w-px h-12 bg-white/10 hidden md:block"></div>
                    <div class="text-left">
                        <p
                            class="text-[10px] font-black uppercase tracking-widest text-gray-500 mb-2"
                        >
                            Estimated Return
                        </p>
                        <span
                            class="text-sm font-bold uppercase tracking-widest"
                            >T-Minus 60 Minutes</span
                        >
                    </div>
                </div>

                <div class="pt-20">
                    <p
                        class="text-[10px] font-black uppercase tracking-[0.5em] text-white/20"
                    >
                        VOX.AFRICA GLOBAL NEWSROOM
                    </p>
                </div>
            </div>
        </div>
    </body>
</html>
