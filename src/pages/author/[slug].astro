---
import MainLayout from "../../layouts/MainLayout.astro";
import VoxNav from "../../components/ui/VoxNav.astro";
import StreamCard from "../../components/ui/StreamCard.astro";
import Footer from "../../components/Footer.astro";
import { AUTHORS } from "../../data/mock";
import { storyService } from "../../lib/services";
import { Mail, Twitter, Globe, Linkedin } from 'lucide-react';

export const prerender = true;

export async function getStaticPaths() {
  return AUTHORS.map(author => ({
    params: { slug: author.slug },
    props: { author },
  }));
}

const { author } = Astro.props;

// Fetch all published stories and filter by this author
const publishedStories = await storyService.getPublishedStories();
const authorStories = publishedStories.filter(s => s.author === author.name || s.authorSlug === author.slug);

---

<MainLayout title={`${author.name} - Explainer`}>
  <VoxNav />
  
  <main class="min-h-screen bg-[#fdfdfd]">
    <div class="bg-gray-50 border-b border-gray-200">
        <div class="max-w-4xl mx-auto px-6 py-20 text-center">
            <div class="mb-8 relative inline-block">
                <div class="w-32 h-32 rounded-full bg-white border-4 border-white shadow-md overflow-hidden mx-auto">
                    <img src={`https://api.dicebear.com/7.x/avataaars/svg?seed=${author.name}`} alt={author.name} class="w-full h-full object-cover" />
                </div>
            </div>
            <h1 class="font-serif-display font-black text-4xl md:text-5xl text-black mb-3">{author.name}</h1>
            <p class="text-[#008751] font-bold uppercase tracking-widest text-xs mb-6">{author.role}</p>
            <p class="text-xl text-gray-600 font-serif leading-relaxed max-w-2xl mx-auto mb-8">{author.bio}</p>
            <div class="flex justify-center gap-4">
                {author.email && <a href={`mailto:${author.email}`} class="p-2 text-gray-400 hover:text-black border border-transparent hover:border-gray-200 shadow-sm rounded-full"><Mail className="w-5 h-5" /></a>}
                {author.social?.twitter && <a href="#" class="p-2 text-gray-400 hover:text-[#1DA1F2] border border-transparent hover:border-gray-200 shadow-sm rounded-full"><Twitter className="w-5 h-5" /></a>}
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto px-6 py-16">
        <div class="flex items-center justify-between border-b-2 border-black pb-4 mb-12">
            <h2 class="text-xl font-black uppercase tracking-wider">Latest from {author.name.split(' ')[0]}</h2>
            <span class="text-gray-500 font-serif text-sm italic">{authorStories.length} Articles</span>
        </div>

        <div class="space-y-12">
            {authorStories.length > 0 ? (
                authorStories.map(story => (
                    <StreamCard article={story as any} />
                ))
            ) : (
                <div class="text-center py-20 bg-gray-50 rounded-lg border border-dashed border-gray-300">
                    <p class="text-gray-500 font-serif italic text-lg">No published articles yet.</p>
                </div>
            )}
        </div>
    </div>
  </main>
  <Footer />
</MainLayout>