---
import MainLayout from "../layouts/MainLayout.astro";
import HeroFeature from "../components/ui/HeroFeature.astro";
import StreamCard from "../components/ui/StreamCard.astro";
import VideoSection from "../components/ui/VideoSection.astro";
import NewsletterSignup from "../components/NewsletterSignup.astro";
import Footer from "../components/Footer.astro";
import { VOX_HOME_DATA } from "../data/mock";

const trending = [
  "The case for abolishing the penny",
  "Why everyone is playing this word game",
  "How to sleep better",
  "The future of electric planes",
  "Why coffee is getting more expensive"
];
---

<MainLayout title="Explainer - Understand the News">
  <!-- Main Content Wrapper -->
  <main class="max-w-6xl mx-auto px-6 py-10">
    
    <!-- Hero Section -->
    <HeroFeature article={VOX_HOME_DATA.hero} />

    <!-- Divider -->
    <hr class="border-gray-200 my-16" />

    <!-- Middle Section: Stream + Trending -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <!-- Main Stream (2/3) -->
      <div class="lg:col-span-2">
        <div class="flex items-center justify-between mb-8 border-b border-black pb-2">
           <h2 class="text-xl font-black uppercase tracking-tight">Latest Stories</h2>
        </div>
        
        <div class="flex flex-col">
          {VOX_HOME_DATA.latest.map((article) => (
            <StreamCard article={article} />
          ))}
        </div>
      </div>

      <!-- Sidebar: Trending (1/3) -->
      <div class="hidden lg:block">
        <div class="sticky top-24">
          <div class="flex items-center justify-between mb-6 border-b border-black pb-2">
            <h2 class="text-xl font-black uppercase tracking-tight">Trending</h2>
          </div>
          
          <ol class="list-decimal list-inside space-y-4">
            {trending.map((item) => (
              <li class="pl-2">
                <a href="#" class="text-lg font-bold leading-tight text-black hover:text-gray-600 hover:underline decoration-[#008751] decoration-2 underline-offset-2">
                  {item}
                </a>
              </li>
            ))}
          </ol>
          
          <!-- Ad / Promo Placeholder -->
          <div class="mt-12 bg-gray-100 p-6 text-center rounded-sm">
            <p class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Advertisement</p>
            <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-400 text-sm font-mono">
              [Ad Space]
            </div>
          </div>
        </div>
      </div>

    </div>
  </main>

  <!-- Full Bleed Video Section -->
  <VideoSection videos={VOX_HOME_DATA.videos} />

  <NewsletterSignup />
  <Footer />
</MainLayout>
