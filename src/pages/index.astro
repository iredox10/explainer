---
import MainLayout from "../layouts/MainLayout.astro";
import HeroFeature from "../components/ui/HeroFeature.astro";
import StreamCard from "../components/ui/StreamCard.astro";
import VideoSection from "../components/ui/VideoSection.astro";
import { VOX_HOME_DATA } from "../data/mock";

const trending = [
  "The case for abolishing the penny",
  "Why everyone is playing this word game",
  "How to sleep better",
  "The future of electric planes",
  "Why coffee is getting more expensive"
];
---

<MainLayout title="Explainer - Visual Journalism">
  <!-- Main Content Wrapper -->
  <main class="max-w-7xl mx-auto px-6 py-12">
    
    <!-- Hero Section -->
    <HeroFeature article={VOX_HOME_DATA.hero} />

    <!-- Middle Section: Stream + Trending -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 mt-24">
      
      <!-- Sidebar: Trending (Left - 3 cols) -->
      <div class="hidden lg:block lg:col-span-3">
        <div class="sticky top-32">
          <h2 class="text-sm font-black uppercase tracking-[0.2em] mb-8 text-gray-400">Trending Now</h2>
          
          <div class="space-y-8">
            {trending.map((item, i) => (
              <div class="group cursor-pointer">
                <div class="text-4xl font-serif-display font-bold text-gray-200 group-hover:text-yellow-400 transition-colors mb-2">
                  0{i + 1}
                </div>
                <a href="#" class="text-md font-bold leading-snug text-black group-hover:text-gray-600 transition-colors">
                  {item}
                </a>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Main Stream (Right - 9 cols) -->
      <div class="lg:col-span-9">
        <div class="flex items-end justify-between mb-12">
           <h2 class="text-6xl font-serif-display font-black text-black">Latest</h2>
           <span class="hidden md:block h-px flex-1 bg-gray-200 ml-8 mb-4"></span>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-1 gap-x-12">
          {VOX_HOME_DATA.latest.map((article) => (
            <StreamCard article={article} />
          ))}
        </div>
        
        <div class="mt-12 text-center">
           <a href="#" class="inline-block px-12 py-4 border border-black font-bold uppercase tracking-widest hover:bg-black hover:text-white transition-colors">
             Load More Stories
           </a>
        </div>
      </div>

    </div>
  </main>

  <!-- Full Bleed Video Section -->
  <VideoSection videos={VOX_HOME_DATA.videos} />

</MainLayout>