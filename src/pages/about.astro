---
import MainLayout from "../layouts/MainLayout.astro";
import VoxNav from "../components/ui/VoxNav.astro";
import Footer from "../components/Footer.astro";
import { authorService } from "../lib/services";
import { Mail, Twitter, Linkedin } from "lucide-react";

// Fetch all authors from Appwrite
let authors: any[] = [];
try {
    authors = await authorService.getAuthors();
} catch (e) {
    console.error("Failed to fetch authors for masthead");
}

// Sort by name
const sortedAuthors = [...authors].sort((a, b) => (a.name || '').localeCompare(b.name || ''));
---

<MainLayout title="About Us & Masthead - Explainer">
    <VoxNav />
    
    <main class="bg-white dark:bg-gray-950 min-h-screen transition-colors duration-300">
        {/* --- Hero Section --- */}
        <section class="pt-24 pb-16 px-6 border-b border-gray-100 dark:border-gray-900">
            <div class="max-w-7xl mx-auto text-center md:text-left">
                <span class="text-[10px] font-black uppercase tracking-[0.3em] text-[#FAFF00] bg-black dark:bg-[#FAFF00] dark:text-black px-3 py-1 rounded mb-6 inline-block">Our Mission</span>
                <h1 class="text-6xl md:text-8xl font-serif-display font-black tracking-tighter text-black dark:text-white uppercase italic mb-8">
                    Explainer<span class="text-[#FAFF00]">.</span> OS
                </h1>
                <p class="text-2xl md:text-4xl font-serif text-gray-600 dark:text-gray-400 max-w-4xl leading-[1.1] tracking-tight">
                    We are a team of visual journalists, data scientists, and storytellers dedicated to making sense of an increasingly complex world through deep-dive reporting and cinematic interactives.
                </p>
            </div>
        </section>

        {/* --- Masthead Section --- */}
        <section class="py-24 px-6 bg-gray-50 dark:bg-gray-900/50 transition-colors">
            <div class="max-w-7xl mx-auto">
                <div class="flex items-center gap-4 mb-16">
                    <h2 class="text-4xl font-serif-display font-black uppercase tracking-tighter text-black dark:text-white">The Masthead</h2>
                    <div class="h-px flex-1 bg-gray-200 dark:bg-gray-800"></div>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                    {sortedAuthors.map((author) => (
                        <div class="bg-white dark:bg-gray-900 p-8 rounded-[2rem] shadow-xl hover:shadow-2xl transition-all border border-gray-100 dark:border-gray-800 group">
                            <div class="relative w-32 h-32 mx-auto mb-8">
                                <div class="absolute inset-0 bg-[#FAFF00] rounded-full scale-110 opacity-0 group-hover:opacity-100 transition-all duration-500 blur-2xl"></div>
                                <div class="relative w-full h-full rounded-full overflow-hidden border-4 border-white dark:border-gray-800 shadow-lg">
                                    <img 
                                        src={author.imageUrl || `https://api.dicebear.com/7.x/avataaars/svg?seed=${author.name}`} 
                                        alt={author.name}
                                        class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
                                    />
                                </div>
                            </div>

                            <div class="text-center space-y-2">
                                <h3 class="text-2xl font-serif-display font-black tracking-tight text-black dark:text-white">{author.name}</h3>
                                <p class="text-[10px] font-black uppercase tracking-widest text-[#008751] dark:text-[#00ff9d] bg-[#008751]/5 dark:bg-[#00ff9d]/5 px-3 py-1 rounded-full inline-block">
                                    {author.role || "Editorial Staff"}
                                </p>
                                <p class="text-sm text-gray-500 dark:text-gray-400 font-medium leading-relaxed pt-4 line-clamp-3 italic">
                                    {author.bio || "Visual journalist dedicated to explaining the world's most complex systems."}
                                </p>
                            </div>

                            <div class="mt-8 pt-8 border-t border-gray-50 dark:border-gray-800 flex justify-center gap-4">
                                {author.email && (
                                    <a href={`mailto:${author.email}`} class="p-2 text-gray-400 hover:text-black dark:hover:text-white hover:bg-gray-50 dark:hover:bg-gray-800 rounded-full transition-all">
                                        <Mail className="w-4 h-4" />
                                    </a>
                                )}
                                <a href="#" class="p-2 text-gray-400 hover:text-[#1DA1F2] hover:bg-blue-50 dark:hover:bg-blue-900/20 rounded-full transition-all">
                                    <Twitter className="w-4 h-4" />
                                </a>
                                <a href="#" class="p-2 text-gray-400 hover:text-[#0077B5] hover:bg-blue-50 dark:hover:bg-blue-900/20 rounded-full transition-all">
                                    <Linkedin className="w-4 h-4" />
                                </a>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        {/* --- Values Section --- */}
        <section class="py-24 px-6 bg-white dark:bg-gray-950 overflow-hidden transition-colors">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-24 items-center">
                    <div>
                        <h2 class="text-5xl font-serif-display font-black text-black dark:text-white uppercase tracking-tighter mb-12 leading-none">
                            Visual Journalism<br />as a Service
                        </h2>
                        <div class="space-y-12">
                            <div class="space-y-4">
                                <h4 class="text-xl font-black uppercase tracking-tight text-black dark:text-white">01. Data Integrity</h4>
                                <p class="text-gray-600 dark:text-gray-400 leading-relaxed font-medium">We don't just report numbers; we verify, analyze, and visualize them to reveal hidden patterns.</p>
                            </div>
                            <div class="space-y-4">
                                <h4 class="text-xl font-black uppercase tracking-tight text-black dark:text-white">02. Radical Clarity</h4>
                                <p class="text-gray-600 dark:text-gray-400 leading-relaxed font-medium">Our goal is to remove friction between information and understanding.</p>
                            </div>
                            <div class="space-y-4">
                                <h4 class="text-xl font-black uppercase tracking-tight text-black dark:text-white">03. Narrative Motion</h4>
                                <p class="text-gray-600 dark:text-gray-400 leading-relaxed font-medium">Static news is dead. We use motion and interactivity to guide you through the story.</p>
                            </div>
                        </div>
                    </div>
                    <div class="relative">
                        <div class="absolute inset-0 bg-[#FAFF00] -skew-x-12 translate-x-12 opacity-50 dark:opacity-20 transition-colors"></div>
                        <div class="relative bg-black text-white p-12 shadow-2xl border border-white/5">
                            <h3 class="text-3xl font-serif-display italic mb-6 font-black">"The world is complex. We're building the OS to understand it."</h3>
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-px bg-[#FAFF00]"></div>
                                <span class="text-[10px] font-black uppercase tracking-[0.3em]">Explainer Manifesto</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</MainLayout>
